module shit.configs.project;

import std.path;
import helper.paths;

enum shitFullVersion = "${VERSION}",
    shitMajorVersion = "${VERSION_MAJOR}",
    shitMinorVersion = "${VERSION_MINOR}",
    shitPatchVersion = "${VERSION_ALTER}",
    shitPlatform = "${plat}",
    shitArchitecture = "${arch}",
    shitOs = "${os}",
    shitMode = "${mode}";

export string shitConfigsPath()
{
    return buildPath(dirName(dirName(executablePath())), "etc", "shit");
}